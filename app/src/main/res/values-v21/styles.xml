<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:spinnerStyle">@style/DesclubSpinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/DesclubSpinnerDropDownItem</item>

        <item name="android:statusBarColor">@color/desclub_blue</item>
        <item name="android:windowActionBar">false</item>
        
        <item name="android:editTextStyle">@style/BeepEditText</item>

        <item name="android:colorControlNormal">@color/material_grey_100</item>
        <item name="android:colorControlActivated">@color/desclub_blue</item>
        <item name="android:colorControlHighlight">@color/desclub_orange</item>
        <item name="android:colorPrimary">@color/desclub_blue</item>
        <item name="android:colorPrimaryDark">@color/desclub_blue</item>
        <item name="android:colorAccent">@color/desclub_orange</item>

        <!--
        This overrides the default dark or light dialog background color.
        Note that if you use a dark color here, you should set md_dark_theme to
        true so text and selectors look visible
    -->
        <item name="md_background_color">@android:color/white</item>

        <!--
        By default, the title text color is derived from the
        ?android:textColorPrimary system attribute.
    -->
        <item name="md_title_color">@color/desclub_blue</item>


        <!--
            By default, the content text color is derived from the
            ?android:textColorSecondary system attribute.
        -->
        <item name="md_content_color">@color/material_grey_400</item>
    </style>

    <!-- Button related styles -->
    <style name="BeepButtonOrange" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/desclub_orange</item>
    </style>

    <style name="BeepTextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/material_grey_800</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Edit text related styles -->
    <style name="BeepEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/material_grey_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/beep_edit_text_style_background</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <!-- Label related styles -->
    <style name="BeepLabel" >
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/material_grey_600</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="ErrorLabel">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/material_red_800</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/material_grey_300</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ModulesListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@color/desclub_blue</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="WhiteBackground">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/material_grey_800</item>
    </style>

    <style name="TransparentBackground">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/material_grey_800</item>
    </style>

    <style name="DesclubSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/spinner</item>
    </style>

    <style name="DesclubSpinnerDropDownItem" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
    </style>
</resources>