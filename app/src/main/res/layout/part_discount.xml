<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/discount_businessLogo_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:maxWidth="80dp" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discount_businessName_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pizza Hut"
            android:textColor="@color/material_grey_700"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/discount_businessAddress_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berlin 46. Col Roma"
            android:textColor="@color/material_grey_400"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/discount_distance_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5 km"
            android:textColor="@color/desclub_blue"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discount_parent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/discount_cash_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0%"
            android:textColor="@color/desclub_orange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discount_card_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0%"
            android:textColor="@color/desclub_orange"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/discount_promo_circle_layout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/round_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/promo"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>